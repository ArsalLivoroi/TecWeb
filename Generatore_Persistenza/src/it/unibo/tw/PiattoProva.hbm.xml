<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="it.unibo.tw.beans.PiattoProva" table="piatto_prova">

		<id name="idPiattoProva" column="id_piattoprova">
			<generator class="increment"/>
		</id>


		<property  name="nomePiatto" column="nome_piatto" unique="true" not-null="true"/>

		<property name="classificazionePiatto" column="classificazione_piatto" not-null="true"/>
		<property name="calorie" column="calorie" not-null="true"/>

		<set name="ingredientiprova" inverse="true" lazy="true" fetch="select" >
			<key column="id_piattoprova" />
			<many-to-many column="id_ingredienteprova" class="it.unibo.tw.beans.IngredienteProva" />
		</set>
		
	</class>
</hibernate-mapping>